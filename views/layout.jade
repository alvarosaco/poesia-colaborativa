    script
      var socket = io.connect('http://poesiacolaborativa.nodester.com/');

      socket.on('mover', function (d) {
        $("#"+(d.id)).css("left", d.data.x);
        $("#"+(d.id)).css("top", d.data.y);
      });
            
      $(function() {
        $( ".draggable" ).draggable({
          drag: function()
          {
            var data = Object();
            data.id = $(this).data('id');
            data.pos = $(this).position();
            
            socket.emit('mover', {data: data });
          }
        })
      });
